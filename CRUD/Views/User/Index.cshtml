@model List<User>
<partial name="_Notification"/>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary"> User List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="User" asp-action="Create" class="btn btn-primary ">
				<i class="bi bi-person-plus-fill"></i>Add User
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Display Order</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@obj.FirstName</td>
				<td>@obj.LastName</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-100 btn-group" role="group">
						<a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 danger">
							<i class="bi bi-person-x"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>