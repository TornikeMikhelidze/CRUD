@model User
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit User</h2>
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<label asp-for="FirstName" class="p-0"></label>
			<input asp-for="FirstName" class="form-control" />

			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="LastName" class="p-0"></label>
			<input asp-for="LastName" class="form-control" />

			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="DisplayOrder" class="p-1"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Edit</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary form-control">
					Back to list
				</a>
			</div>
		</div>
	</div>
</form>
@section scripts {
	@{
		<partial name="_ValidationScriptsPartial.cshtml"></partial>
	}
}